{{>header}}
{{>navbar}}
<section class="container my-3">
    <h2>new User Data</h2>
    <form method="post">
        <div class="mb-3">
            <input class="form-control" name="name" placeholder="Enter your name" value="{{data.name}}">
            {{#if errors.name}}
                <div class="text-danger"><span>{{errors.name}}</span></div>
        {{/if}}

        </div>
        <div class="mb-3">
            <input class="form-control" name="age" placeholder="Enter your age" value="{{data.age}}">
            {{#if errors.age}}
                <div class="text-danger"><span>{{errors.age}}</span></div>
            {{/if}}
        </div>

        <div class="mb-3">
            <input class="form-control" name="email" placeholder="Enter your email" value="{{data.email}}">
            {{#if errors.email}}
                <div class="text-danger"><span>{{errors.email}}</span></div>
            {{/if}}
        </div>
        
        <div class="mb-3">
            <input class="form-control" name="address" placeholder="Enter your address" value="{{data.address}}" >
            {{#if errors.address}}
                <div class="text-danger"><span>{{errors.address}}</span></div>
            {{/if}}
        </div>
        <div class="mb-3">
            <input class="form-control" type="number" name="initialbalance" placeholder="Enter your inital blance" value="{{data.initialbalance}}">
            {{#if errors.initialbalance}}
                <div class="text-danger"><span>{{errors.initialbalance}}</span></div>
            {{/if}}
        </div>
             <div class="mb-3">
            <input class="form-control"  name="mobile" placeholder="Enter your mobile number" value="{{data.mobile}}">
            {{#if errors.mobile}}
                <div class="text-danger"><span>{{errors.mobile}}</span></div>
            {{/if}}
        </div>
        
        <div class="mb-3">
            <button class="btn btn-primary">add Data</button>
        </div>
    </form>
</section>
{{>footer}}